<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="ScoreEntryRow">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
	</style>
	
    <style name="ScoreEntryContainer">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
	
    <style name="ScoreButtonContainer">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="ScoreEntryLabel">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">10sp</item>
    </style>
	
    <style name="ScoreEntryField">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:hint">0</item>
    </style>
    
    <style name="ScoreEntryDummyElement">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="ScoreSubmitButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/submit_form</item>
    </style>
    
    <style name="ScoreClearButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/clear_form</item>
    </style>
    
    <style name="CalculatedScoreSection">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="ScoreSectionTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/score_section_label</item>
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="CalculatedScoreRow">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="CalculatedScoreLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="IIDX_CalculatedScoreLabel" parent="CalculatedScoreLabel" >
        <item name="android:textSize">24sp</item>
        <item name="android:text">@string/iidx_score_label_default</item>
    </style>
    
    <style name="CalculatedScoreValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:text">@string/score_value_earned_default</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="IIDX_CalculatedScoreValue" parent="CalculatedScoreValue" >
        <item name="android:textSize">24sp</item>
        <item name="android:text">@string/iidx_score_value_default</item>
    </style>
    
    <style name="CalculatedScorePercent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:text">@string/score_percent_default</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="IIDX_CalculatedScorePercent" parent="CalculatedScorePercent" >
        <item name="android:textSize">24sp</item>
        <item name="android:text">@string/iidx_score_percent_default</item>
    </style>
    
    <style name="CalculatedScoreGrade">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:text">@string/score_grade_default</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="IIDX_CalculatedScoreGrade" parent="CalculatedScoreGrade" >
        <item name="android:textSize">24sp</item>
    </style>

</resources>
