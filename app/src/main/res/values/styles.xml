<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- to remove the default action -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item> <!-- For 2.x version -->
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="ActivityStandardPadding">
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="ModuleListItem">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">@dimen/module_row_padding</item>
        <item name="android:text">@string/default_module_name</item>
        <item name="android:textSize">@dimen/module_name_size</item>
    </style>
    
    <style name="AboutSectionHeader">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">@dimen/about_header_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/about_header_label_size</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-light</item>
    </style>

    <style name="AboutPackageDetails">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingBottom">@dimen/about_package_details_padding</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="AboutChangelogRow">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AboutChangelogHeader" parent="AboutChangelogElement">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="AboutChangelogElement">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/about_changelog_padding</item>
        <item name="android:paddingRight">@dimen/about_changelog_padding</item>
    </style>

    <style name="ScoreEntryRow">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
	</style>

    <style name="ScoreGradeContainer">
        <item name="android:layout_height">@dimen/score_entry_container_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="ScoreEntryLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingLeft">@dimen/score_entry_label_paddingLeft</item>
        <item name="android:textSize">@dimen/score_entry_label_size</item>
    </style>
	
    <style name="ScoreEntryField">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">0dp</item> <!-- Required to keep the text from being cut off? -->
        <item name="android:gravity">center</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">number</item>
        <item name="android:hint">0</item>
    </style>
    
    <style name="ScoreEntryDummyElement">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="ScoreClearButton">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/clear_form</item>
        <item name="android:contentDescription">@string/score_clear_description</item>
    </style>

    <style name="PotentialScoreLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingLeft">@dimen/score_display_padding</item>
        <item name="android:paddingRight">@dimen/score_display_padding</item>
        <item name="android:textSize">@dimen/score_display_small_size</item>
        <item name="android:text">@string/score_label_potential_default</item>
    </style>

    <style name="CalculatedScoreValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/score_display_padding</item>
        <item name="android:paddingRight">@dimen/score_display_padding</item>
        <item name="android:text">@string/score_value_earned_default</item>
        <item name="android:textSize">@dimen/score_display_small_size</item>
    </style>
    
    <style name="CalculatedScorePercent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingLeft">@dimen/score_display_padding</item>
        <item name="android:paddingRight">@dimen/score_display_padding</item>
        <item name="android:textSize">@dimen/score_display_large_size</item>
    </style>
    
    <style name="CalculatedScoreGrade">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/score_display_padding</item>
        <item name="android:paddingRight">@dimen/score_display_padding</item>
        <item name="android:textSize">@dimen/score_display_large_size</item>
    </style>

</resources>
