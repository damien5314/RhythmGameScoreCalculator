<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ActivityStandardPadding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ddiehl.rgsc.itg.ITGFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:text="@string/fantastics_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ScoreEntryLabel" />

                    <EditText
                        android:id="@+id/fantastics"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/score_entry_height"
                        style="@style/ScoreEntryField" />

                    <TextView
                        android:text="@string/excellents_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ScoreEntryLabel" />

                    <EditText
                        android:id="@+id/excellents"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/score_entry_height"
                        style="@style/ScoreEntryField" />

                    <TextView
                        android:text="@string/greats_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ScoreEntryLabel" />

                    <EditText
                        android:id="@+id/greats"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/score_entry_height"
                        style="@style/ScoreEntryField" />

                    <TextView
                        android:text="@string/decents_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ScoreEntryLabel" />

                    <EditText
                        android:id="@+id/decents"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/score_entry_height"
                        style="@style/ScoreEntryField" />

                    <TextView
                        android:text="@string/wayoffs_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ScoreEntryLabel" />

                    <EditText
                        android:id="@+id/wayoffs"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/score_entry_height"
                        style="@style/ScoreEntryField" />

                    <TextView
                        android:text="@string/misses_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ScoreEntryLabel" />

                    <EditText
                        android:id="@+id/misses"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/score_entry_height"
                        android:nextFocusDown="@+id/holds"
                        style="@style/ScoreEntryField" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:text="@string/holds_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ScoreEntryLabel" />

                    <EditText
                        android:id="@id/holds"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/score_entry_height"
                        style="@style/ScoreEntryField" />

                    <TextView
                        android:text="@string/totalHolds_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ScoreEntryLabel" />

                    <EditText
                        android:id="@+id/total_holds"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/score_entry_height"
                        style="@style/ScoreEntryField" />

                    <TextView
                        android:text="@string/mines_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ScoreEntryLabel" />

                    <EditText
                        android:id="@+id/mines"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/score_entry_height"
                        style="@style/ScoreEntryField" />

                    <TextView
                        android:text="@string/rolls_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ScoreEntryLabel" />

                    <EditText
                        android:id="@+id/rolls"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/score_entry_height"
                        style="@style/ScoreEntryField" />

                    <TextView
                        android:text="@string/totalRolls_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ScoreEntryLabel" />

                    <EditText
                        android:id="@+id/total_rolls"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/score_entry_height"
                        android:nextFocusDown="@id/fantastics"
                        style="@style/ScoreEntryField" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/calculated_score"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/score_values_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/score_value_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/score_display_small_size"
            android:textColor="@color/secondary_text"
            tools:text="573 / 1337 (-764)"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/score_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/score_display_padding"
                android:paddingRight="@dimen/score_display_padding"
                android:textSize="@dimen/score_display_large_size"
                android:textColor="@color/secondary_text"
                tools:text="0.00%" />

            <TextView
                android:id="@+id/score_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/score_display_padding"
                android:paddingRight="@dimen/score_display_padding"
                android:textSize="@dimen/score_display_large_size"
                android:textColor="@color/secondary_text"
                tools:text="D"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/clear_form"
        android:layout_width="match_parent"
        android:layout_height="@dimen/clear_button_height"
        android:text="@string/button_clear_form"
        android:contentDescription="@string/score_clear_description" />

</LinearLayout>
