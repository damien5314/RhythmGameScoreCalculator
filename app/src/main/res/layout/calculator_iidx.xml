<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ActivityStandardPadding"
    android:orientation="vertical"
    tools:context=".Calculator_IIDX" >

    <LinearLayout
        android:id="@+id/score_entry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout style="@style/ScoreEntryRow" >

            <LinearLayout style="@style/ScoreGradeContainer" >

                <TextView
                    android:text="@string/jgreats_hint"
                    style="@style/ScoreEntryLabel" />

                <EditText
                    android:id="@+id/jgreats"
                    android:nextFocusDown="@id/greats"
                    style="@style/ScoreEntryField" />

            </LinearLayout>

            <LinearLayout style="@style/ScoreGradeContainer" >

                <TextView
                    android:text="@string/bads_hint"
                    style="@style/ScoreEntryLabel" />

                <EditText
                    android:id="@+id/bads"
                    android:nextFocusDown="@+id/poors"
                    style="@style/ScoreEntryField" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout style="@style/ScoreEntryRow" >

            <LinearLayout style="@style/ScoreGradeContainer" >

                <TextView
                    android:text="@string/greats_hint"
                    style="@style/ScoreEntryLabel" />

                <EditText
                    android:id="@+id/greats"
                    android:nextFocusDown="@id/goods"
                    style="@style/ScoreEntryField" />

            </LinearLayout>

            <LinearLayout style="@style/ScoreGradeContainer" >

                <TextView
                    android:text="@string/poors_hint"
                    style="@style/ScoreEntryLabel" />

                <EditText
                    android:id="@id/poors"
                    android:nextFocusDown="@id/jgreats"
                    style="@style/ScoreEntryField" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout style="@style/ScoreEntryRow" >

            <LinearLayout style="@style/ScoreGradeContainer" >

                <TextView
                    android:text="@string/goods_hint"
                    style="@style/ScoreEntryLabel" />

                <EditText
                    android:id="@+id/goods"
                    android:nextFocusDown="@id/bads"
                    style="@style/ScoreEntryField" />

            </LinearLayout>

            <LinearLayout style="@style/ScoreButtonContainer" >

                <ImageButton
                    android:id="@+id/clear_form"
                    android:onClick="clearForm"
                    style="@style/ScoreClearButton"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calculated_score"
        style="@style/CalculatedScoreSection" >

        <LinearLayout
            android:gravity="center"
            style="@style/CalculatedScoreRow">

            <TextView style="@style/ExScoreLabel"
                android:text="@string/iidx_score_label_default"
                android:id="@+id/earnedScoreLabel"/>

            <TextView style="@style/ExScoreValue"
                android:id="@+id/earned_score_value" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            style="@style/CalculatedScoreRow">

            <TextView style="@style/CalculatedScorePercent"
                android:id="@+id/score_percent"/>

            <TextView style="@style/CalculatedScoreGrade"
                android:id="@+id/score_grade"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
