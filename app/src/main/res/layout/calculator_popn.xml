<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ddiehl.rgsc.com.ddiehl.rgsc.calculators.Calculator_PopN">

    <LinearLayout
        android:id="@+id/score_entry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout style="@style/ScoreEntryRow" >

            <LinearLayout style="@style/ScoreEntryContainer" >

                <TextView
                    style="@style/ScoreEntryLabel"
                    android:text="Greats" />

                <EditText
                    android:id="@+id/greats"
                    style="@style/ScoreEntryElement" />
            </LinearLayout>

            <LinearLayout style="@style/ScoreEntryContainer" >

                <TextView
                    style="@style/ScoreEntryLabel"
                    android:text="Goods" />

                <EditText
                    android:id="@+id/goods"
                    style="@style/ScoreEntryElement" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout style="@style/ScoreEntryRow" >

            <LinearLayout style="@style/ScoreEntryContainer" >

                <TextView
                    style="@style/ScoreEntryLabel"
                    android:text="Boos" />

                <EditText
                    android:id="@+id/boos"
                    style="@style/ScoreEntryElement"
                    android:nextFocusDown="@id/greats" />
            </LinearLayout>

            <LinearLayout style="@style/ScoreButtonContainer" >

                <ImageButton
                    android:id="@+id/submit"
                    style="@style/ScoreSubmitButton"
                    android:onClick="calculateScore" />

                <ImageButton
                    android:id="@+id/clearForm"
                    style="@style/ScoreClearButton"
                    android:onClick="clearForm" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
