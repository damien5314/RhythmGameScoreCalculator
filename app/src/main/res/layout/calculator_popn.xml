<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.ddiehl.rgsc.com.ddiehl.rgsc.calculators.Calculator_PopN">

    <LinearLayout
        android:id="@+id/score_entry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout style="@style/ScoreEntryRow" >

            <LinearLayout style="@style/ScoreEntryContainer" >

                <TextView
                    android:text="@string/cools_hint"
                    style="@style/ScoreEntryLabel" />

                <EditText
                    android:id="@+id/cools"
                    android:nextFocusDown="@id/greats"
                    style="@style/ScoreEntryField"/>

            </LinearLayout>

            <LinearLayout style="@style/ScoreEntryContainer" >

                <TextView
                    android:text="@string/greats_hint"
                    style="@style/ScoreEntryLabel" />

                <EditText
                    android:id="@+id/greats"
                    android:nextFocusDown="@id/goods"
                    style="@style/ScoreEntryField" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout style="@style/ScoreEntryRow" >

            <LinearLayout style="@style/ScoreEntryContainer" >

                <TextView
                    android:text="@string/goods_hint"
                    style="@style/ScoreEntryLabel" />

                <EditText
                    android:id="@+id/goods"
                    android:nextFocusDown="@id/boos"
                    style="@style/ScoreEntryField" />

            </LinearLayout>

            <LinearLayout style="@style/ScoreEntryContainer" >

                <TextView
                    android:text="@string/boos_hint"
                    style="@style/ScoreEntryLabel" />

                <EditText
                    android:id="@+id/boos"
                    android:nextFocusDown="@id/cools"
                    style="@style/ScoreEntryField" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout style="@style/ScoreEntryRow" >

            <LinearLayout style="@style/ScoreEntryContainer" >

                <TextView style="@style/ScoreEntryDummyElement" />

            </LinearLayout>

            <LinearLayout style="@style/ScoreButtonContainer" >

                <ImageButton
                    android:id="@+id/submit"
                    android:onClick="calculateScore"
                    android:contentDescription="@string/score_submit_description"
                    style="@style/ScoreSubmitButton"/>

                <ImageButton
                    android:id="@+id/clearForm"
                    android:onClick="clearForm"
                    android:contentDescription="@string/score_clear_description"
                    style="@style/ScoreClearButton"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calculated_score"
        style="@style/CalculatedScoreSection" >

        <TextView
            android:id="@+id/scoreSectionLabel"
            style="@style/ScoreSectionTitle"
            android:text="@string/score_section_label" />

        <LinearLayout style="@style/CalculatedScoreRow" >

            <TextView
                android:id="@+id/earnedScoreValue"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:textSize="24sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
