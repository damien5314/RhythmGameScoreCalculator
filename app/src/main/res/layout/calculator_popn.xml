<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ddiehl.rgsc.com.ddiehl.rgsc.calculators.Calculator_PopN">

    <LinearLayout
        android:id="@+id/score_entry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout style="@style/ScoreEntryRow" >

            <LinearLayout style="@style/ScoreEntryContainer" >

                <TextView
                    style="@style/ScoreEntryLabel"
                    android:text="@string/greats_hint" />

                <EditText
                    android:id="@+id/greats"
                    style="@style/ScoreEntryElement" />

            </LinearLayout>

            <LinearLayout style="@style/ScoreEntryContainer" >

                <TextView
                    style="@style/ScoreEntryLabel"
                    android:text="@string/goods_hint" />

                <EditText
                    android:id="@+id/goods"
                    style="@style/ScoreEntryElement" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout style="@style/ScoreEntryRow" >

            <LinearLayout style="@style/ScoreEntryContainer" >

                <TextView
                    style="@style/ScoreEntryLabel"
                    android:text="@string/boos_hint" />

                <EditText
                    android:id="@+id/boos"
                    style="@style/ScoreEntryElement"
                    android:nextFocusDown="@id/greats" />

            </LinearLayout>

            <LinearLayout style="@style/ScoreButtonContainer" >

                <ImageButton
                    android:id="@+id/submit"
                    style="@style/ScoreSubmitButton"
                    android:onClick="calculateScore"
                    android:contentDescription="@string/score_submit_description"/>

                <ImageButton
                    android:id="@+id/clearForm"
                    style="@style/ScoreClearButton"
                    android:onClick="clearForm"
                    android:contentDescription="@string/score_clear_description"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calculated_score"
        style="@style/CalculatedScoreSection" >

        <TextView
            android:id="@+id/scoreSectionLabel"
            style="@style/ScoreSectionTitle"
            android:text="@string/score_section_label" />

        <LinearLayout style="@style/CalculatedScoreRow" >

            <TextView
                android:id="@+id/earnedScoreLabel"
                style="@style/CalculatedScoreLabel"
                android:text="@string/score_label_earned_default" />

            <TextView
                android:id="@+id/earnedScoreValue"
                style="@style/CalculatedScoreValue" />

        </LinearLayout>

        <LinearLayout style="@style/CalculatedScoreRow" >

            <TextView
                android:id="@+id/potentialScoreLabel"
                style="@style/CalculatedScoreLabel"
                android:text="@string/score_label_potential_default" />

            <TextView
                android:id="@+id/potentialScoreValue"
                style="@style/CalculatedScoreValue" />

        </LinearLayout>

        <LinearLayout style="@style/CalculatedScoreRow" >

            <TextView
                android:id="@+id/scorePercent"
                style="@style/CalculatedScorePercent" />

            <TextView
                android:id="@+id/scoreGrade"
                style="@style/CalculatedScoreGrade" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
